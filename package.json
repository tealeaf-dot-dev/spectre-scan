{
    "name": "Spectre Scan",
    "type": "module",
    "version": "1.0.0",
    "main": "dist/spectre-scan.js",
    "scripts": {
        "build": "mkdir -p dist && tsc",
        "start": "mkdir -p data && node dist/spectre-scan.js",
        "lint": "eslint src tests --ext .ts",
        "lint:fix": "eslint --fix src tests --ext .ts",
        "clean:dist": "rm -rf dist/*",
        "clean:data": "rm -rf data/*",
        "clean": "npm run clean:dist && npm run clean:data",
        "test": "vitest --reporter=default",
        "test-coverage": "vitest run --coverage"
    },
    "keywords": [
        "Nostr"
    ],
    "author": "tf",
    "license": "MIT",
    "description": "Aggregator of daily unique pubkeys on the Nostr network",
    "dependencies": {
        "fp-ts": "^2.16.10",
        "nostr-tools": "^2.10.4",
        "rxjs": "^7.8.2",
        "sqlite3": "^5.1.7",
        "ws": "^8.18.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@stylistic/eslint-plugin-ts": "^4.2.0",
        "@types/node": "^22.13.14",
        "@types/ws": "^8.5.14",
        "@vitest/coverage-v8": "^3.1.2",
        "eslint": "^9.23.0",
        "globals": "^16.0.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.27.0",
        "vitest": "^3.1.2",
        "vitest-mock-extended": "^3.1.0"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.9"
    }
}
